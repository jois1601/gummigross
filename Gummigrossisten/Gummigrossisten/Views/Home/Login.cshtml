@{
    ViewBag.Title = "Login";
}


<div class="login-container" style="margin-left:35%; margin-bottom:100px;">
    @using (Html.BeginForm())
    {
        <h2 style="margin-left:5%; margin-bottom:5%;">Kundlogin</h2>
        <div class="login-form-container">
            <div class="form-group" id="username-container">
                <label>Användarnamn</label>
                <input type="text" class="form-control" name="username" maxlength="55" id="username">
                <small style="color:red">@TempData["felinlogg"]</small>
            </div>

            <div class="form-group" id="password-container">
                <label>Lösenord</label>
                <input type="password" class="form-control" name="password" maxlength="55" id="password">
                <small style="color:red">@TempData["felinlogg"]</small>
            </div>
<div class="slutfor-button-login" style="margin-left:12%;">
            <input type="submit" class="btn btn-success btn-lg" id="login" value="Logga in">
        </div>

        </div>
        
    }
</div>

