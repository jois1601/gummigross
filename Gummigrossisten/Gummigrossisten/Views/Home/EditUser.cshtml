@model Gummigrossisten.Models.user
@{
    ViewBag.Title = "EditUser";
}

<div style="width:100%; float:left;">
    <p style="visibility:hidden">@TempData["user"]</p>
    <h4> @Html.ActionLink("⇚ Tillbaka till startsidan", "AdminStart", new { id = TempData["user"] })</h4>
</div>


<div class="tabcontent">


    <h1 style="margin-bottom:5%; text-align:center; text-decoration:underline">Redigera användare</h1>

    @using (Html.BeginForm())
    {

        <h4 style="color:green; ">@TempData["UpdateUser"]</h4>
        <form>
            <fieldset>

                <div style="margin-left:40%;" class="form-group">
                    <label style="margin-right:69%; font-weight:bold; color:black; font-size:20px;">ID</label>
                    <input type="text" class="form-control" value="@Html.DisplayFor(Model => Model.userID)" name="userID" id="userID" readonly>
                    <small style="margin-right:69%" class="form-text text-muted"></small>
                </div>

                <div style="margin-left:40%;" class="form-group">
                    <label style="margin-right:69%; font-weight:bold; color:black; font-size:20px;">Användarnamn</label>
                    <input type="text" class="form-control" name="username" id="username" value="@Html.DisplayFor(Model => Model.username)" readonly>
                    <small style="margin-right:69%" class="form-text text-muted"></small>
                </div>


                <div style="margin-left:40%;" class="form-group">
                    <label style="margin-right:69%;font-weight:bold; color:black; font-size:20px;">Lösenord</label>
                    <input type="text" class="form-control" name="password" id="password" value="@Html.DisplayFor(Model => Model.password)" readonly>
                    <small style="margin-right:69%" class="form-text text-muted"></small>
                </div>

                <div style="margin-left:40%;" class="form-group">
                    <label style="margin-right:69%;font-weight:bold; color:black; font-size:20px;">Välj prislista</label>
                    <select class="form-control" id="pricelist" name="pricelist">
                        <option>BILLIGA PRISLISTAN</option>
                        <option>DYRA PRISLISTAN</option>
                    </select>
                    <small style="margin-right:69%" class="form-text text-muted">Nuvarande prislista: @Html.DisplayFor(Model => Model.access.name)</small>

            </div>


            <div style="margin-left:40%;" class="form-group">
                <button style="margin-top:3%;margin-right:69%" type="submit" class="btn btn-warning">Uppdatera</button>
            </div>

            </fieldset>

        </form>


    }

</div>
